{
  "name": "metaphorically",
  "version": "0.0.1",
  "description": "Metaphors are awesome.",
  "repository": "https://github.com/clintandrewhall/metaphorically",
  "main": "./server.js",
  "browser": "./client.js",
  "browserify": {
    "transform": [
      [
        "reactify",
        {
          "harmony": true
        }
      ]
    ]
  },
  "dependencies": {
    "async": "~0.9.0",
    "express": "~4.1.1",
    "fibers": "~1.0.1",
    "fs-extra": "~0.11",
    "node-dir": "~0.1",
    "node-jsx": "~0.10.0",
    "react": "~0.10.0",
    "react-async": "~0.9.1",
    "react-bootstrap": "~0.12.0",
    "react-router-component": "~0.18.2",
    "superagent": "~0.18.0",
    "marked": "~0.3",
    "winston": "~0.7"
  },
  "devDependencies": {
    "reactify": "~0.13.1",
    "envify": "~1.2.0",
    "browserify": "~3.44.2",
    "connect-browserify": "~2.0.1",
    "uglify-js": "~2.4.13",
    "supervisor": "~0.6.0",
    "gulp": "~3.8.8",
    "gulp-concat": "~2.4.1",
    "gulp-uglify": "~1.0.1",
    "gulp-imagemin": "~1.0.1",
    "gulp-sourcemaps": "~1.2.2",
    "del": "~0.1.3",
    "gulp-less": "~1.3.6",
    "gulp-webserver": "~0.8.2"
  },
  "subdomain": "metaphorically",
  "engines": {
    "node": "0.10.x"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node parse-and-link && supervisor -i node_modules -e js,jsx server.js",
    "build": "node parse-and-link && NODE_ENV=production browserify ./ | uglifyjs -cm 2>/dev/null > ./assets/bundle.js",
    "start-prod": "NODE_ENV=production node server.js",
    "clean": "rm -f ./assets/bundle.js && rm -rf ./lib/metaphors"
  },
  "author": "Clint Andrew Hall"
}
